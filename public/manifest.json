{
  "manifest_version": 3,
  "name": "Stay Focused",
  "description": "A tool helps you stay focused. It will stop you opening entertaining websites.",
  "version": "1.0",
  "icons": {
    "16": "./img/icon-16.png",
    "32": "./img/icon-32.png",
    "48": "./img/icon-48.png",
    "128": "./img/icon-128.png"
  },
  "permissions": ["tabs", "activeTab", "storage"],
  "action": {},
  "background": {
    "service_worker": "background.bundle.js"
  },
  "options_page": "options/options.html",
  "content_security_policy": {
    "extension_pages": "default-src 'self'; style-src 'self' 'unsafe-inline'"
  }
}
